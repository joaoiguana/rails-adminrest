<div id="<%= dom_id reservation %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Restaurant:</strong>
    <%= reservation.restaurant_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Customer:</strong>
    <%= reservation.customer_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= reservation.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Group size:</strong>
    <%= reservation.group_size %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Reservation date:</strong>
    <%= reservation.reservation_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= reservation.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Comments:</strong>
    <%= reservation.comments %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this reservation", reservation, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this reservation', edit_reservation_path(reservation), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
